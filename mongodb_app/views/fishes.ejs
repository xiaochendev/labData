<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Fishes</title>
    <link rel="stylesheet" href="../styles/style.css">
</head>
<body>
    <%- include('partials/nav') %>
    <%- include('partials/messages') %> 

    <main class="fishes-page">
        <section class="fishes-form">
            <h2>Create New Fish</h2>
            <form action="/api/fishes" method="POST">
                <label>Name:
                    <input type="text" name="name" required>
                </label>

                <label>Species:
                    <input type="text" name="species" required>
                </label>

                <label>Age:
                    <input type="number" name="age" min="0" required>
                </label>

                <label>Water Type:
                    <select name="waterType" required>
                        <option value="">-- Select --</option>
                        <option value="freshwater">Freshwater</option>
                        <option value="saltwater">Saltwater</option>
                        <option value="brackish">Brackish</option>
                    </select>
                </label>

                <label>Habitat (comma separated):
                    <input type="text" name="habitat" placeholder="e.g. reef, river" required>
                </label>

                <label>Max Depth (meters):
                    <input type="number" name="maxDepth" min="0">
                </label>

                <label>Arrival Date:
                    <input type="date" name="arrivalDate">
                </label>

                <label>Health Status:
                    <input type="text" name="healthStatus" placeholder="e.g. healthy, injured">
                </label>

                <label>
                    <input type="checkbox" name="vaccinated">
                    Vaccinated
                </label>

                <label>Microchip ID:
                    <input type="text" name="microchipId">
                </label>

                <label>
                    <input type="checkbox" name="isAdopted">
                    Adopted
                </label>

                <label>Adoption Date:
                    <input type="date" name="adoptionDate">
                </label>

                <label>Adopter Name:
                    <input type="text" name="adopterName">
                </label>

                <label>Adopter Contact:
                    <input type="text" name="adopterContact">
                </label>

                <button type="submit">Create Fish</button>
            </form>
        </section>

        <section class="fishes-section">
            <% if (fishes && fishes.length > 0) { %>
                <ul class="fishes-list">
                    <% fishes.forEach(fish => { %>
                        <li>
                            <a href="/api/fishes/<%= fish._id %>">
                                <strong><%= fish.name %></strong> â€” <%= fish.species %>
                            </a>
                            <% if (fish.isAdopted) { %>
                                <em>(Adopted)</em>
                            <% } else { %>
                                <em>(Available)</em>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No fishes found.</p>
            <% } %>
        </section>
    </main>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Fishes</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <main class="fishes-page">
        <%- include('partials/nav') %>
        <%- include('partials/messages') %> 
        <section class="fishes-form">
            <h2>Create New Fish</h2>
            <form action="/api/fishes" method="POST">
                <label>Name:
                    <input type="text" name="name" value="<%= formData.name || '' %>" required>
                </label>

                <label>Species:
                    <input type="text" name="species">
                </label>

                <label>Age:
                    <input type="number" name="age" min="0" value="<%= formData.age || '' %>">
                </label> <br/>

                <label>Water Type:
                    <select name="waterType" value="<%= formData.waterType || '' %>" required>
                        <option value="">-- Select --</option>
                        <option value="freshwater">Freshwater</option>
                        <option value="saltwater">Saltwater</option>
                        <option value="brackish">Brackish</option>
                    </select>
                </label>

                <label>Habitat (comma separated):
                    <input type="text" name="habitat" value="<%= formData.habitat || '' %>" placeholder="e.g. reef, river" required>
                </label><br/>

                <label>Max Depth (meters):
                    <input type="number" name="maxDepth" min="0">
                </label>

                <label>Arrival Date:
                    <input type="date" name="arrivalDate" value="<%= formData.arrivalDate || '' %>">
                </label><br/>

                <label>Health Status:
                    <input type="text" name="healthStatus" placeholder="e.g. healthy, injured">
                </label>

                <label>
                    <input type="checkbox" name="vaccinated">
                    Vaccinated
                </label>

                <label>Microchip ID:
                    <input type="text" name="microchipId">
                </label><br/>

                <label>
                    <input type="checkbox" name="isAdopted" <%= formData.isAdopted ? 'checked' : '' %> >
                    Adopted
                </label>

                <label>Adoption Date:
                    <input type="date" name="adoptionDate">
                </label>

                <label>Adopter Name:
                    <input type="text" name="adopterName">
                </label><br/>

                <label>Adopter Contact:
                    <input type="text" name="adopterContact">
                </label>

                <button type="submit">Create Fish</button>
            </form>
        </section>

        <section class="fishes-section">
            <% if (fishes && fishes.length > 0) { %>
                <ul class="fishes-list">
                    <% fishes.forEach(fish => { %>
                        <li>
                            <a href="/api/fishes/<%= fish._id %>">
                                <strong><%= fish.name %></strong> â€” <%= fish.species %>
                            </a>
                            <span> | Age: <%= fish.age %> | 
                            <% if (fish.isAdopted) { %>
                                <em>(Adopted)</em>
                            <% } else { %>
                                <em>(Available)</em>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No fishes found.</p>
            <% } %>
        </section>
    </main>
</body>
</html>

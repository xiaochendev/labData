<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>users</title>
</head>

<body>
    <%- include('partials/nav') %>
    <%- include('partials/messages') %>

    <main class="users-page">

        <section class="users-form">
            <h2>Create New User</h2>
            <form action="/api/users" method="POST">
                <input name="name" placeholder="Name" required>
                <input name="username" placeholder="Username" required>
                <input name="email" placeholder="Email" type="email" required>
                <button type="submit">Create User</button>
            </form>
        </section>

        <section class="users-section">
            <h1>All Users</h1>
                <ul class="users-list">
                <% users.forEach(user => { %>
                    <li>
                        <a href="/api/users/<%= user.id %>"><%= user.name %> (@<%= user.username %>)</a>
                        <ul>
                            <li><a href="/api/users/<%= user.id %>/posts">all Posts by <%= user.username %></a></li>
                            <li><a href="/api/users/<%= user.id %>/comments">all Comments by <%= user.username %></a></li>
                        </ul>
                    </li>
                <% }) %>
                </ul>
        </section>

    </main>
   
</body>
</html>